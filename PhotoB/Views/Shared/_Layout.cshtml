</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PhotoB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Shop start", "Index", "Shop")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bootstrap Styles<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a class="styleMenuItem" href="#" data-styleName="">default</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-cerulean">cerulean</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-cosmo">cosmo</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-flatly">flatly</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-lumen">lumen</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-paper">paper</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-readable">readable</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-sandstone">sandstone</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-simplex">simplex</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-slate">slate</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-superhero">superhero</a></li>
                            <li><a class="styleMenuItem" href="#" data-styleName="-yeti">yeti</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>    
    
    
</body>
</html>

<script>
    $(document).ready(function () {

        $('.styleMenuItem').click(function () {
            var styleName = $(this).attr('data-styleName');
            setStyle(styleName);
            setCookie("photob-style-name", styleName);
        });       


        function setStyle(styleName) {
            var stylePath = "/Content/bootstrap" + styleName + ".css";
            $('link[href*="bootstrap"]').attr('href', stylePath);
        };


        var styleNameCookieValue = getCookie("photob-style-name");
        setStyle(styleNameCookieValue);


        function setCookie(cname, cvalue/*, exdays*/) {
            //var d = new Date();
            //d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
            //var expires = "expires=" + d.toUTCString();
            document.cookie = cname + "=" + cvalue + "; path=/";// + "; " + expires;
        }

        function getCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1);
                if (c.indexOf(name) == 0) return c.substring(name.length, c.length);
            }
            return "";
        }

    });
</script>
