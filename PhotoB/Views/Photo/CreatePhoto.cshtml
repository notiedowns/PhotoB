@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavascriptInHead
{
    <script src="~/Scripts/Photos/photos-controller.js"></script>
    <script src="~/Scripts/Photos/photo-repository.js"></script>

}

<div class="row" style="margin-top:50px;">
    <div class="col-md-10">
        <h2>Create Photo {{2 + 2}}</h2>
    </div>
</div>

<div class="row" ng-controller="PhotosController">
    <div class="col-md-3">
        <div class="form-group">
            <label>Number</label>
            <input type="text" ng-model="photo.number" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" ng-model="photo.name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Manufacturer</label>
            <input type="text" ng-model="photo.manufacturer" class="form-control" />
        </div>
        <button class="btn btn-default" ng-click="createPhoto(photo)">Create Photo</button>
        @*<div style="color: red;" ng-show="errors.length > 0" ng-repeat="error in errors">{{error}}</div>*@
        <div style="color: red;" >{{errorMessage}}</div>
    </div>
</div>


